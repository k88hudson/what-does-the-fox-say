{
  "name": "what-does-the-fox-say",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {

    "build": "npm-run-all build:**",
    "start": "npm run build && npm-run-all --parallel server watch:**",

    "prebuild": "rimraf www && mkdirp www",
    "prestart": "npm run prebuild",

    "build:static": "cpx \"src/static/**/*\" www",
    "watch:static": "npm run build:static -- -w",

    "build:js": "webpack",
    "watch:js": "npm run build:js -- --watch",

    "build:css": "npm run watch:css -- --no-watch",
    "watch:css": "autoless --source-map src www",

    "server": "live-server www --port=4240"

  },
  "author": "k88hudson",
  "license": "MPL-2.0",
  "dependencies": {
    "react": "^0.13.3"
  },
  "engines": {
    "npm": ">=2.0.0"
  },
  "devDependencies": {
    "autoless": "^0.1.7",
    "babel-core": "^5.2.17",
    "babel-loader": "^5.0.0",
    "cpx": "^1.1.6",
    "jsx-loader": "^0.13.2",
    "live-server": "^0.7.1",
    "mkdirp": "^0.5.0",
    "npm-run-all": "^1.2.4",
    "rimraf": "^2.3.3",
    "webpack": "^1.9.4"
  }
}
